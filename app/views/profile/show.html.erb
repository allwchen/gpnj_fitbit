<script>
    $(document).ready(function() { $("#user_ministry").select2(); });
    $(document).ready(function() { $("#user_peer_class").select2(); });
 </script> 

<%= csrf_meta_tags %>

<div class="Container">

  <%= simple_form_for(@user, url: profile_path, :method => :update) do |f| %>
    <%= f.input :name, :label => 'Name', input_html: {value: @user_name} %>
  	<%= f.input :peer_class, collection: @classes, :label => 'Peer Class', selected: @user_peer_class%>
  	<%= f.input :ministry, collection: @ministry_names, :label => 'Ministry Group', selected: @user_ministry%>
  	<%= f.input :gender, collection: ["Male", "Female"], selected: @user_gender%>
    <%= f.button :submit,  data: { disable_with: false }, class: 'Button' %>
  <% end -%>
</div>